module log_h.

log_d(X) => "D: ".print, X.println.
log_e(X) => "E: ".print, X.println.
log_i(X) => "I: ".print, X.println.

log_d_v(X)   => log_d(X, v).
log_d_vv(X)  => log_d(X, vv).
log_d_vvv(X) => log_d(X, vvv).


log_d(X, V), membchk(V, debug_mode()) => log_d(X).
log_d(X, V), membchk(all, debug_mode()) => log_d(X).
log_d(X, V) => true.

debug_mode() = X => X = [v, vv].

% debug v   -> solo entrata nella funzione
% debug vv  -> da definire
% debug vvv -> tutto