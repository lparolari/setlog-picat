%% confirm(+Q) = A
%
% Prompts for confirmation (yes/no question) and return the answer
% as a boolean value (0/1).
confirm(Q) = A => 
    print(Q.to_string ++ " (y/n): "),
    R := read_line().strip(),
    if R = "y" then 
        A = 1 
    else 
        A = 0
    end.