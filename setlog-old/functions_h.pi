module functions_h.

%% module functions_h.
%
% Contains a precise mapping between build-in helper predicats like 
% ground(Term), ==, etc. and the corrispondig functions based on them.

%% is_ground(+T:term) = Res:bool
is_ground(T) = Res => is_ground(T, Res).
is_ground(T, Res), ground(T)  => Res = 1.
is_ground(T, Res)  => Res = 0.

%% is_eq(+X:term, +Y:term) = Res:bool
is_eq(X, Y) = Res => is_eq(X, Y, Res).
is_eq(X, Y, Res), X == Y => Res = 1.
is_eq(X, Y, Res)  => Res = 0.

%% is_neq(+X:term, +Y:term) = Res:bool
is_neq(X, Y) = Res => is_neq(X, Y, Res).
is_neq(X, Y, Res), X !== Y => Res = 1.
is_neq(X, Y, Res)  => Res = 0.